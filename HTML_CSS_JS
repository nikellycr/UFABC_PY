    height: 100vw;
    display: flex;
    justify-content: center;
    align-items: center;
}

button{
    width: 300px;
    height: 300px;
    border-radius: 50%;
    border: none;
    background-color: black;
    color:lightcoral; 
    font-size: 20pt;
}
button:hover{
    cursor: pointer;
    opacity: 0.8;
}

let botao = document.querySelector("#botao");
let pagina = document.querySelector("#corpo");

function trocarCor(){
    pagina.style.backgroundColor = "lightcoral";
}

botao.onclick = trocarCor;
